  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="MapIcons\*.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

</Project>